# Database Configuration
# Used by docker-compose to set up the Postgres container
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=instashorts
POSTGRES_PORT=5432

# Database Connection URL
# For local development (outside Docker): postgresql://postgres:postgres@localhost:5432/instashorts
# For Docker services (overridden in docker-compose.yml): postgresql://postgres:postgres@postgres:5432/instashorts
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/instashorts

# Redis Configuration
# For local development: localhost
# For Docker services: redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Web App Configuration
NEXT_PUBLIC_BETTER_AUTH_URL="http://localhost:3000"
BETTER_AUTH_URL="http://localhost:3000"
BETTER_AUTH_SECRET="your_random_secret_here"

# Authentication Providers (Better Auth)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
DISCORD_CLIENT_ID=""
DISCORD_CLIENT_SECRET=""

# Google Cloud Storage (for assets)
GCS_BUCKET_NAME="instashorts-content"
GOOGLE_CLOUD_STORAGE_BUCKET="instashorts-content"
GOOGLE_CLOUD_PROJECT_ID="instashortsio"
# Path to your Google Cloud credentials JSON file (if using local dev)
# GOOGLE_APPLICATION_CREDENTIALS="/path/to/credentials.json"

